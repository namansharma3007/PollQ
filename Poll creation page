#Javascript code
document.getElementById("pollForm").addEventListener("submit", function (event) {
    event.preventDefault();

    // Form data
    const title = document.getElementById("pollTitle").value.trim();
    const description = document.getElementById("pollDescription").value.trim();
    const options = document.getElementById("pollOptions").value.trim();
    const startDate = document.getElementById("pollStartDate").value;
    const endDate = document.getElementById("pollEndDate").value;
    const voteType = document.getElementById("voteType").value;

    // Validation
    if (!title || !description || !options || !startDate || !endDate) {
        alert("Please fill in all required fields.");
        return;
    }

    if (new Date(startDate) > new Date(endDate)) {
        alert("End date must be after start date.");
        return;
    }

    // Simulate poll creation success
    document.getElementById("successMessage").textContent = "Poll created successfully!";
    document.getElementById("pollForm").reset();
});


